@model ThemeResult

@if (Model.NumberOfGamesPlayed == 0)
{
    <div class="row">
        <div class="col-12">
            <div class="col-12">
                <strong>@Model.Name</strong>
            </div>
            <div class="col-12">
                This theme doesn't have any recorded games.
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="col-12">
                @if (Model.ListPosition != 0)
                {
                    <strong># @Model.ListPosition - @Model.Name</strong>
                }
                else
                {
                    <strong>@Model.Name</strong>
                }
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="col-12">
                <strong>Winrate:</strong> @Model.Winrate.ToString("P1")
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="col-12">
                <strong>Games Played:</strong> @Model.NumberOfGamesPlayed
            </div>
            <div class="col-12">
                <strong>Games Won:</strong> @Model.NumberOfGamesWon
            </div>
            <div class="col-12">
                <strong>Games Lost:</strong> @Model.NumberOfGamesLost
            </div>
            <div class="col-12">
                <strong>Mirror Matches:</strong> @Model.NumberOfMirrorMatches
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="col-12">
                <strong>Most Played Caster:</strong>
            </div>
            <div class="col-12">
                @Model.MostPlayedCaster (@Model.GamesWithMostPlayedCaster)
            </div>
            <div class="col-12">
                <strong>Best Caster: </strong>
            </div>
            <div class="col-12">
                @Model.BestPerformingCaster (@Model.WinrateBestPerformingCaster.ToString("P1"))
            </div>
        </div>
    </div>
}