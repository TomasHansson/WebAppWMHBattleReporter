@model CasterResult

<div class="row">
    <div class="col-4 text-right">
        @if (Model.ListPosition != 0)
        {
            @Model.ListPosition
        }
    </div>
    <div class="col-4 font-weight-bold text-center">
        @Model.Name
    </div>
    <div class="col-4 text-left">
        @Model.Winrate.ToString("P1")
    </div>
</div>
<div class="row">
    <div class="col-6">
        Games Played: @Model.NumberOfGamesPlayed
    </div>
    <div class="col-6">
        Games Won: @Model.NumberOfGamesWon
    </div>
    <div class="col-6">
        Games Lost: @Model.NumberOfGamesLost
    </div>
    <div class="col-6">
        Mirror Matches: @Model.NumberOfMirrorMatches
    </div>
</div>
<div class="row">
    <div class="col-6">
        Most Played Theme: @Model.MostPlayedTheme (@Model.GamesWithMostPlayedTheme)
    </div>
    <div class="col-6">
        Best Theme: @Model.BestPerformingTheme (@Model.WinrateBestPerformingTheme.ToString("P1"))
    </div>
    <div class="col-6">
        Most Played Scenario: @Model.MostPlayedScenario (@Model.GamesMostPlayedScenario)
    </div>
    <div class="col-6">
        Best Scenario: @Model.BestPerformingScenario (@Model.WinrateBestPerformingScenario.ToString("P1"))
    </div>
    <div class="col-6">
        Most Played End Condition: @Model.MostPlayedEndCondition (@Model.GamesMostPlayedEndCondition)
    </div>
    <div class="col-6">
        Best End Condition: @Model.BestPerformingEndCondition (@Model.WinrateBestPerformingEndCondition.ToString("P1"))
    </div>
</div>