@model  Theme
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Edit">
    <div class="border applicationFormGroup">
        <h2 class="text-info">Theme Details</h2>
        <br />
        <div class="form-group row">
            <div class="col-md-2 col-12">
                <label asp-for="Faction.Name" class="col-form-label">Faction</label>
            </div>
            <div class="col-md-10 col-12">
                <input asp-for="Faction.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-12">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-md-10 col-12">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10 col-12 offset-md-2">
                <partial name="_DetailsAndBackToListButtons" model="Model.Id" />
            </div>
        </div>
    </div>
</form>