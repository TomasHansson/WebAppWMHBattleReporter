@model List<Faction>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Faction Index</h1>

@if (Model.Count == 0)
{
    <h1>There are no factions in the database.</h1>
}
else
{
    <ul>
        @foreach (Faction faction in Model)
        {
            <li>
                @faction.Name
            </li>
        }
    </ul>
}