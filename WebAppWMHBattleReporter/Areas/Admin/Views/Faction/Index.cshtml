@model List<Faction>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border applicationFormGroup">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Faction List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButton" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() != 0)
        {
            <div class="table-responsive">
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            Current Factions
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (Faction faction in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => faction.Name)
                            </td>
                            <td>
                                <partial name="_TableButtons" model="faction.Id" />
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <p>There are no factions in the database.</p>
        }
    </div>
</div>