@model FactionViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!String.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <partial name="_StatusMessage" model="@Model.StatusMessage" />
}

<form method="post" asp-action="Edit">
    <div class="border applicationFormGroup">
        <h2 class="text-info">Edit Faction</h2>
        <br />
        <input type="hidden" asp-for="@Model.Faction.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Faction.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Faction.Name" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Faction.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButtons" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}