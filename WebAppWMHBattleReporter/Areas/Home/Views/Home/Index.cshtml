@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-info">Warmachine & Hordes</h1>
    <h1 class=" text-info">Battle Reporter</h1>
    <p>Record your games of Warmachine & Hordes and compare your scores to other users!</p>
    <hr />
    <br />
    <div class="row">
        <div class="col-12 col-sm-4">
            <i class="fas fa-dice fa-7x text-info"></i>
            <br />
            <br />
            <div class="font-weight-bold">
                Play Games
            </div>
            <br />
        </div>
        <div class="col-12 col-sm-4">
            <i class="fas fa-clipboard fa-7x text-info"></i>
            <br />
            <br />
            <div class="col font-weight-bold">
                Record Your Results
            </div>
            <br />
        </div>
        <div class="col-12 col-sm-4">
            <i class="fas fa-chart-bar fa-7x text-info"></i>
            <br />
            <br />
            <div class="col font-weight-bold">
                View Detailed Statistics
            </div>
            <br />
        </div>
    </div>
    <hr />
    <div id="carouselExampleFade" class="carousel slide carousel-fade border-dark" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/image0.jpg" class="d-block w-100" alt="Ongoing battles in Warmachines & Hordes!">
            </div>
