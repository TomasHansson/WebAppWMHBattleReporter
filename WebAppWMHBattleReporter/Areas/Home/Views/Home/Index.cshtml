@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-info">Warmachine & Hordes</h1>
    <h1 class=" text-info">Battle Reporter</h1>
    <p>Record your games of Warmachine & Hordes and compare your scores to other users!</p>
    <hr />
    <div class="row">
        <div class="col">
            <i class="fas fa-dice fa-7x text-info"></i>
        </div>
        <div class="col">
            <i class="fas fa-clipboard fa-7x text-info"></i>
        </div>
        <div class="col">
            <i class="fas fa-chart-bar fa-7x text-info"></i>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col font-weight-bold">
            Play games
        </div>
        <div class="col font-weight-bold">
            Record Your Results
        </div>
        <div class="col font-weight-bold">
            View Detailed Statistics
        </div>
    </div>
    <hr />
    <div id="carouselExampleFade" class="carousel slide carousel-fade border-dark" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/imageOne.jpg" class="d-block w-100" alt="Ongoing battles in Warmachines & Hordes!">
            </div>
            <div class="carousel-item">
                <img src="~/images/imageTwo.jpg" class="d-block w-100" alt="Ongoing battles in Warmachines & Hordes!">
            </div>
            <div class="carousel-item">
                <img src="~/images/imageThree.jpg" class="d-block w-100" alt="Ongoing battles in Warmachines & Hordes!">
            </div>
            <div class="carousel-item">
                <img src="~/images/imageFour.jpg" class="d-block w-100" alt="Ongoing battles in Warmachines & Hordes!">
            </div>
            <div class="carousel-item">
                <img src="~/images/imageFive.jpg" class="d-block w-100" alt="Ongoing battles in Warmachines & Hordes!">
            </div>
            <div class="carousel-item">
                <img src="~/images/imageSix.jpg" class="d-block w-100" alt="Ongoing battles in Warmachines & Hordes!">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
