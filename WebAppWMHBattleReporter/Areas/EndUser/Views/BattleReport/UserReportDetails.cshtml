@model BattleReport
@{
    ViewData["Title"] = "UserReportDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border applicationFormGroup">
    <h2 class="text-info">Battle Report Details</h2>
    <br />
    <partial name="_BattleReportDetails" model="@Model" />
    <div class="form-group row">
        <div class="col-12 col-md-6">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary form-control mb-1">Edit</a>
        </div>
        <div class="col-12 col-md-6">
            <a asp-action="UnconfirmedBattleReports" asp-route-id="@User.Identity.Name" class="btn btn-success form-control">Back to List</a>
        </div>
    </div>
</div>